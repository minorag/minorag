{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build Minorag.Cli",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Minorag.Cli/Minorag.Cli.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Add EF Migration",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "ef",
                "migrations",
                "add",
                "${input:migrationName}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/src/Minorag.Cli"
            }
        },
        {
            "label": "Test with Coverage",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "test",
                "--collect:\"XPlat Code Coverage\""
            ],
            "options": {
                "cwd": "${workspaceFolder}/tests/Minorag.Tests"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Generate Coverage Report (HTML)",
            "type": "shell",
            "command": "reportgenerator",
            "args": [
                "-reports:${workspaceFolder}/tests/Minorag.Tests/TestResults/**/coverage.cobertura.xml",
                "-targetdir:${workspaceFolder}/coverage-report",
                "-reporttypes:Html"
            ]
        },
        {
            "label": "build Minorag.Api",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/Minorag.Api/Minorag.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "migrationName",
            "type": "promptString",
            "description": "Enter EF migration name (no spaces, e.g. AddedClientsAndProjects)",
            "default": "NewMigration"
        }
    ]
}